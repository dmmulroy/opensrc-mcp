{
  "name": "opensrc-mcp",
  "version": "0.1.3",
  "description": "MCP server for fetching and querying dependency source code",
  "type": "module",
  "main": "dist/index.mjs",
  "bin": {
    "opensrc-mcp": "dist/index.mjs"
  },
  "files": [
    "dist",
    "libs"
  ],
  "scripts": {
    "build": "tsdown src/index.ts --format esm --shims",
    "dev": "tsdown src/index.ts --format esm --shims --watch",
    "start": "node dist/index.mjs",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "opensrc",
    "source-code",
    "ai",
    "llm",
    "vector-search",
    "semantic-search"
  ],
  "license": "MIT",
  "dependencies": {
    "@xenova/transformers": "^2.17.0",
    "better-result": "^2.3.1",
    "better-sqlite3": "^11.7.0",
    "tree-sitter": "^0.22.4",
    "tree-sitter-rust": "^0.23.2",
    "ts-morph": "^24.0.0"
  },
  "devDependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.0.0",
    "fast-glob": "^3.3.2",
    "opensrc": "^0.6.0",
    "tsdown": "^0.20.0-beta.3",
    "typescript": "^5.8.0",
    "zod": "^3.24.0"
  }
}
