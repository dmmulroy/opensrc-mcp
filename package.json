{
  "name": "opensrc-mcp",
  "version": "0.2.0",
  "description": "MCP server for fetching and querying dependency source code",
  "type": "module",
  "main": "dist/index.mjs",
  "bin": {
    "opensrc-mcp": "dist/index.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && tsdown src/index.ts --format esm --shims --sourcemap",
    "dev": "tsdown src/index.ts --format esm --shims --watch",
    "start": "node dist/index.mjs",
    "prepublishOnly": "npm run build"
  },
  "engines": {
    "node": ">=20.10.0"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "opensrc",
    "source-code",
    "ai",
    "llm"
  ],
  "license": "MIT",
  "dependencies": {
    "@ast-grep/napi": "^0.40.5",
    "@modelcontextprotocol/sdk": "^1.12.1",
    "better-result": "^2.3.1",
    "fast-glob": "^3.3.2",
    "opensrc": "^0.6.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsdown": "^0.20.0-beta.3",
    "typescript": "^5.8.0"
  }
}
