    "prepublishOnly": "npm run build"
  },
  "keywords": ["mcp", "model-context-protocol", "opensrc", "source-code", "ai", "llm"],
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "@types/node": "^22.0.0",
    "fast-glob": "^3.3.2",
    "opensrc": "^0.6.0",
    "tsdown": "^0.20.0-beta.3",
    "typescript": "^5.8.0",
    "zod": "^3.24.0"
  }
}
