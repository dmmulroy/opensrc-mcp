{
  "name": "opensrc-mcp",
  "version": "0.1.2",
  "description": "MCP server for fetching and querying dependency source code",
  "type": "module",
  "main": "dist/index.mjs",
  "bin": {
    "opensrc-mcp": "dist/index.mjs"
  },
  "files": ["dist"],
  "scripts": {
